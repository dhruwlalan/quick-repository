{
   "compilerOptions": {
      "target": "ESNEXT",
      "allowJs": true,
      "noEmit": true,
      "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": ["src"],
   "exclude": ["node_modules"]
}
